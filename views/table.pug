doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9' crossorigin='anonymous')

//- h1 The sum of all ages of employees is: #{empAges}
table.table(style='margin-left: 0%; margin-right:200px; margin-top:60px;')
  thead.table-dark
    tr
      th(scope='col') FirstName
      th(scope='col') LastName
      th(scope='col') Email
      th(scope='col') Phone
      th(scope='col') NIN
      th(scope='col') CarType
      th(scope='col') Model
      th(scope='col') Color
      th(scope='col') Number
      th(scope='col') Date
      th(scope='col') Time
      th(scope='col') Delete
      th(scope='col') Edit

  tbody
  if clients.length
    each client in clients
      tr
      td #{client.firstname}
      td #{client.lastname}
      td #{client.emailinput}
      td #{client.phoneinput}
      td #{client.niniput}
      td #{client.carType}
      td #{client.modelinput}
      td #{client.colorinput}
      td #{client.numberplate}
      td #{client.date}
      td #{client.time}
      td
        form(action="/api/client/delete" method="POST")
          input(type="hidden", name="id", value=client._id)
          button.btn.btn-danger(type="submit") Delete
      td  
        a.btn.btn-primary(href="/api/client/edit/"+client._id) Edit
        //- a(href=`/api/employee/edit/${employee._id}`) 

  else
    p there are no clients in the database
    
    
    
















