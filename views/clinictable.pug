h1.heading CarClinic Dashbord
.row
  .col-sm-6
    .card
      .card-body
        h5.card-title Special title treatment
        p.card-text With supporting text below as a natural lead-in to additional content.
        a.btn.btn-primary(href='#') Go somewhere
  .col-sm-6
    .card
      .card-body
        h5.card-title Special title treatment
        p.card-text With supporting text below as a natural lead-in to additional content.
        a.btn.btn-primary(href='#') Go somewhere
.card
  .card-body
    table.table 
      thead
        tr
            th(scope='col') First
            th(scope='col') Last
            th(scope='col') Email
            th(scope='col') Phone
            th(scope='col') NIN
            th(scope='col') CarType
            th(scope='col') Model
            th(scope='col') Color
            th(scope='col') No.Plate
            th(scope='col') Services 
            th(scope='col') Cost
            th(scope='col') Date
            th(scope='col') Arrival 
            th(scope='col') Depart
            th(scope='col') Edit
            th(scope='col') Delete 
      tbody
      if clients.length
        each client in clients
            tr
                td #{client.firstname}
                td #{client.lastname}
                td #{client.emailinput}
                td #{client.phoneinput}
                td #{client.niniput}
                td #{client.carType}
                td #{client.modelinput}
                td #{client.colorinput}
                td #{client.numberplate}
                td #{client.services}
                td #{client.cost}
                td #{client.date}
                td #{client.time}
                td #{client.depart}
                td  
                    a.btn.btn-primary(href="/api/clinic/edit/"+client._id) Edit
                    //- a(href=`/api/clinic/edit/${clinic._id}`)
                td
                    form(action="/api/clinic/delete" method="POST")
                        input(type="hidden", name="id", value=client._id)
                        button.btn.btn-danger(type="submit") Delete
                
      else 
        p there are no parkings in the database
        


          





